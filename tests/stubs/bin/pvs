# Mock : Simulate pvs 

case "$@" in 
	"-o pv_name --noheadings")
		cat <<EOF
  /dev/cciss/c0d0p7
  /dev/sdb
  /dev/sdc
  /dev/sda1        
EOF
	;;
	
	"-o pv_name,vg_name --noheading")
		cat <<EOF
  /dev/cciss/c0d0p7 LVM_XEN  
  /dev/sdb        MULTI
  /dev/sdc        MULTI
  /dev/sda1       vgrack
EOF
	;;
	*)
		echo "Error: bad params: $@" >&2
		exit 1
	;;
esac
